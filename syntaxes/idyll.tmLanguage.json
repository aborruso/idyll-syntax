{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Idyll",
	"patterns": [
		{
			"include": "#componentopen"
		},
		{
			"include": "#componentclose"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#headers"
		},
		{
			"include": "#bold"
		},
		{
			"include": "#italics"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.idyll",
				"match": "\b(var|data)\b"
			}]
		},

		"componentopen": {
			"name": "component.open.idyll",
			"begin": "(\\[)([a-zA-Z0-9]+)",
			"end": "(\/?\\])",
			"beginCaptures": {
				"1" :{
					"name": "punctuation.definition.tag.begin.idyll"
				},
				"2": {
					"name": "entity.name.tag.idyll"
				}
			},
			"endCaptures": {
				"1": {
					"name": "punctuation.definition.tag.end.idyll"
				}
			},
			"patterns": [
				{
					"include": "#idyllattributes"
				}
			]
		},
		"componentclose": {
			"patterns": [{
				"name": "component.close.idyll",
				"match": "(\\[\\\/)([a-zA-Z0-9]+)(\\])",
				"captures": {
					"1": {
						"name": "punctuation.definition.tag.begin.idyll"
					},
					"2": {
						"name": "entity.name.tag.idyll"
					},
					"3": {
						"name": "punctuation.definition.tag.end.idyll"
					}
				}
			}]
		},
		
		"idyllattributes": {
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#props"
				},
				{
					"include": "#expression"
				}
			]
		},
		"comments" : {
			"patterns": [
				{
					"name": "comment.line.double-slash.idyll",
					"match": "\\/\\/.*$"
				},
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment.block.idyll"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.idyll",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.idyll",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.idyll",
				"match": "[0-9]\\.?[0-9]?"
			}]
		},
		"expression": {
			"begin": "`",
			"end": "`",
			"patterns": [
				{
					"include": "string.quoted.double.idyll"
				}
			]
		},
		"componentname": {
			"patterns": [
				{
					"match": "\\[([^\\s]*)\\s+[^\\]]*\\]",
					"captures": {
						"1": {
							"name": "entity.name.tag"
						}
					}
				}
			]
		},
		"props": {
			"patterns": [
				{
					"match": " ([^\\:]*)\\:",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name"
						}
					}
				}
			]
		},
		"codeblocks": {
			"patterns": [
				{
					"begin": "```",
					"end": "```",
					"name": "markup.raw.block.idyll"
				}
			]
		},
		"headers": {
			"patterns": [
				{
					"match": "#{1,6}\\s*[^#]*",
					"name": "markup.heading.idyll"
				}
			]
		},
		"bold": {
			"patterns": [
				{
					"match": "(\\*\\*)([^\\s].*[^\\s])(\\*\\*)",
					"captures": {
						"2": {
							"name": "markup.bold"
						}
					}	
				}
			]
		},
		"italics" : {
			"patterns": [
				{
					"match": "(\\*)([^\\s\\*].*[^\\s\\*])(\\*)",
					"captures": {
						"2": {
							"name": "markup.italic"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.idyll"
}