{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Idyll",
	"patterns": [
		{
			"include": "#closedcomponent"
		},
		{
			"include": "#componentopen"
		},
		{
			"include": "#componentclose"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#codeblock"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.idyll",
				"match": "\b(var|data)\b"
			}]
		},
		"componentopen": {
			"name": "component.open.idyll",
			"begin": "\\[",
			"end": "\\]",
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#componentname"
				},
				{
					"include": "#props"
				},
				{
					"include": "#expression"
				}
			]
		},
		"componentclose": {
			"name": "component.open.idyll",
			"begin": "\\[\\s*/",
			"end": "\\]",
			"patterns": [
				{
					"include": "#componentname"
				}
			]
		},
		"closedcomponent": {
			"name": "component.closed.idyll",
			"begin": "\\[",
			"end": "/\\]",
			"patterns": [
				{
					"include": "#props"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#expression"
				},
				{
					"include": "#numbers"
				}
			]
		},
		"comments" : {
			"patterns": [
				{
					"name": "comment.line.double-slash.idyll",
					"match": "\\/\\/.*$"
				},
				{
					"begin": "\\\/\\*",
					"end": "\\*\\\/",
					"name": "comment.block.idyll"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.idyll",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.idyll",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.idyll",
				"match": "[0-9]\\.?[0-9]?"
			}]
		},
		"expression": {
			"begin": "`",
			"end": "`",
			"patterns": [
				{
					"include": "source.javascript"
				}
			]
		},
		"componentname": {
			"patterns": [
				{
					"match": "([^\\s]*)\\s+[^\\]]*/\\]",
					"captures": {
						"1": {
							"name": "entity.name.tag"
						}
					}
				}
			]
		},
		"props": {
			"patterns": [
				{
					"match": " ([^\\:]*)\\:",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name"
						}
					}
				}
			]
		},
		"codeblock": {
			"begin": "```",
			"end": "```",
			"patterns": [
				{
					"include": "source.idyll"
				}
			]
		}
	},
	"scopeName": "source.idyll"
}